/**
 * Data structure storing the main elements of game meta-data (player names, ranks, game date, location, etc). The fields here are no restricted to any particular format. Check the SGF format standard for recommendations on format of fields like game result, player ranks, etc.  
 */	
class GameInfo {

	// Game date (not in any particular format)
	public var date:String;
	
	// Game location (e.g. "Tokyo") (not in any particular format)
	public var location:String;
	
	// Game event (e.g. "3rd MGA Title") (not in any particular format)
	public var event:String;
	
	// Name of the white player (e.g. "Shusaku") (not in any particular format)
	public var whitePlayerName:String;
	
	// Rank of the white player (e.g. "1p") (not in any particular format)
	public var whitePlayerRank:String;
	
	// Name of the black player (e.g. "Shusaku") (not in any particular format)
	public var blackPlayerName:String;
	
	// Rank of the black player (e.g. "1p") (not in any particular format)
	public var blackPlayerRank:String;
		
	// Komi points given to the white player (e.g. "0.5") (not in any particular format)
	public var komi:String;		
	
	// Number of handicap stones given to the black player (e.g. "9") (should be just a integer number but the format is not restricted)
	public var handicap:String;	
	
	// Game result (e.g. "B+R") (not in any particular format)
	public var result:String;
	
}

